<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
  fx:controller="ru.nsu.lebedev.snake.controllers.GameController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
    <HBox alignment="CENTER">
      <Label text="Scores: "/>
      <Label styleClass="text" fx:id="scores"/>
    </HBox>
    <Button text="Game over" focusTraversable="false" onAction="#gameOver"/>
  </HBox>
  <GridPane fx:id="fieldGrid" VBox.vgrow="ALWAYS"/>
</VBox>
